<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="my-2"><%= link_to task.title, task_path(task) %> - <%= task.completed ? "Done" : "Not done"%>
        <%= link_to "Delete", task_path(task), class: "btn btn-warning p-1",
            data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}
          %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to "Add a new task", new_task_path %>
