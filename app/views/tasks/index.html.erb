<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> <%= task.completed ? "^_^" : "ಠ_ಠ"%>
        <%= link_to "🗑️", task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}
          %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to "Add a new task", tasks_new_path %>
